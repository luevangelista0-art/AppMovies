<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo (branco, por exemplo) -->
    <solid android:color="@android:color/transparent" />

    <!-- Borda colorida -->
    <stroke
        android:width="1dp"
        android:color="@color/black" /> <!-- ou @color/vermelho, etc. -->

    <!-- Cantos arredondados -->
    <corners android:radius="2dp" />

    <!-- Margem interna -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>

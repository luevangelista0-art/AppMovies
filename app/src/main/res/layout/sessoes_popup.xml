<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">
    <TextView
        android:id="@+id/shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shopping"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="local tal, rua tal, numero tal"
        android:textSize="10sp"
        android:textColor="#a0a0a0"
        android:layout_below="@+id/shop"
        />

        <TextView
            android:id="@+id/sala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sala"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/endereco"
            />
        <TextView
            android:id="@+id/modoAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DUB OU LEG"
            android:textColor="@color/red"
            android:paddingHorizontal="3dp"
            android:layout_below="@+id/endereco"
            android:layout_toEndOf="@+id/sala"
            />


    <TextView
        android:id="@+id/horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HorÃ¡rio"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="14dp"
        android:textSize="14dp"
        android:background="@drawable/borda_horario"
        android:layout_below="@+id/sala"
        />

    </RelativeLayout>

</RelativeLayout>